    "@material-ui/core": "^4.8.3",
    "@material-ui/icons": "^4.5.1",
    "formik": "^2.1.2",
    "formik-material-ui": "^2.0.0-alpha.3",
    "lodash": "^4.17.15",
    "material-ui-icons": "^1.0.0-beta.36",
    "next": "^9.1.7",
    "next-redux-cookie-wrapper": "^1.0.1",
    "next-redux-saga": "^4.1.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-modal-hook": "^2.0.0",
